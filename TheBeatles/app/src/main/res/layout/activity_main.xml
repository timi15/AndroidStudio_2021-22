<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textSize="12dp"
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALBUM"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/beatles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With The Beatles"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album"
        />

    <TextView
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:id="@+id/datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release date: 22 November 1963"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beatles"

         />
    <ImageView
        android:id="@+id/kep"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/beatles"
        app:layout_constraintStart_toEndOf="@id/beatles"
        app:layout_constraintTop_toBottomOf="@id/datum"/>

    <ImageView
        android:id="@+id/lista"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lejatszas"
        app:layout_constraintStart_toStartOf="@id/kep"
        app:layout_constraintTop_toBottomOf="@id/kep"/>

    <Button

        android:id="@+id/folyam"
        android:layout_width="191dp"
        android:layout_height="51dp"
        android:text="STREAM"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lista"/>

    <Button
        android:id="@+id/albumvasarlas"
        android:layout_width="191dp"
        android:layout_height="51dp"
        android:text="BUY THE ALBUM"
        app:layout_constraintLeft_toRightOf="@id/folyam"
        app:layout_constraintTop_toBottomOf="@id/lista"
        app:layout_constraintStart_toEndOf="@id/datum"
        />

    <TextView
        android:paddingTop="24dp"
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday 22nd November, 1963 is still remembered by many, who lived through it as the day that President John F. Kennedy was assassinated in Dallas, Texas. Earlier on that eventful day, Parlophone had released the Beatles' second album.
With The Beatles carried on where Please Please Me had left off, melding more Lennon-McCartney originals with further highlights from their stage set."
        app:layout_constraintTop_toBottomOf="@id/albumvasarlas"
        app:layout_constraintRight_toRightOf="parent"/>









</androidx.constraintlayout.widget.ConstraintLayout>